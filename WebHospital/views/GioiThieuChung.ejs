<style>
    .toolbar {
        list-style: none;
        margin: 30px;
        padding: 0;
    }

    .toolbar-item {
        display: block;
    }

    a {
        text-decoration: none;
    }

    .toolbar .toolbar-item .sub-toolbar-item {
        position: relative;
        display: block;
        text-decoration: none;
        padding-left: 20px;
        padding-right: 10px;
        padding-bottom: 15px;
        margin-bottom: 20px;
        border: 0;
        border-bottom: 1px solid #808080;
    }

    .toolbar > :last-child > :last-child {
        border: 0;
        padding-bottom: 0;
    }

    .toolbar .toolbar-item .sub-toolbar-item:hover {
        color: green;
        background-color: hotpink;
    }

    .toolbar .toolbar-item .sub-toolbar-item:before {
        content: "\f054";
        font-family: "Font Awesome 5 Free";
        font-weight: 700;
        /*mã icon và tên font trong thư viện đã import font-weight: 700;*/
        position: absolute;
        top: -2px;
        right: 0;
        z-index: 1;
        color: #d9d9d9;
        transition: all 0.5s ease-out;
    }

    .toolbar .toolbar-item .sub-toolbar-item:after {
        content: "";
        position: absolute;
        height: 25px;
        width: 1px;
        top: -3px;
        left: 0;
        z-index: 1;
        background-color: #d9d9d9;
        transition: all 0.5s ease-out;
    }

    .main_content_div {
